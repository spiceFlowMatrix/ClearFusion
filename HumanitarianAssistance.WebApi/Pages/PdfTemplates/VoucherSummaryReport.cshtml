@model HumanitarianAssistance.Application.Accounting.Models.VoucherSummaryMainReportPdfModel
<!doctype html>
<html>
    <head>
        <title></title>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <link href="https://fonts.googleapis.com/css?family=Roboto:400,500&display=swap" rel="stylesheet">
        <style>
            
            .container { margin:0 auto;max-width:900px; }
            .table, th, td {
                font-size: 12px;
                }
           
            @* @@media print{
                .footer{
                    position:absolute;
                    bottom: 0;
                    width:100%;
                    color: red;
                }
            } *@
            @* .header{
                position: relative;
            } *@
           .footer{
              position: absolute; 
                bottom: 0px; 
                left: 0px; 
                right: 0px;
                height: 50px; 
                margin-top:550px;
              border-left:2px solid;
              border-right:2px solid;
              border-bottom:2px solid;
            }
           
         
        </style>
    </head>
    <body >
                
                @foreach (var voucher in Model.VoucherDetails)
                {
                    
                 <table style="width:100%;border-top:2px solid;border-left:2px solid;border-right:2px solid;">
                    <tr>
                        <td>
                            <table cellpadding="5" style="width:100%;">
                                <tr>
                                <td width="100"><img src="@Model.Logo" alt=""></td>
                                <td  style="font-size:14px;font-weight:bold;">COORDINATION OF HUMANITARIAN ASSISTANCE<br>&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp; &nbsp;<span style="font-size:13px;font-weight:bold;">TRANSACTION VOUCHER</span></td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                 </table>
                  <div style="width:100%; page-break-after: always;" >
                    <table style="width:100%;border-left:2px solid;border-right:2px solid;" >
                   
                        <tr >
                            <td >
                                <table cellpadding="5" style="width:100%;" >
                                    <tr>
                                        <td width="120" style="font-weight:bold">Currency:</td>
                                        <td style="color:black;">@voucher.Currency</td>
                                        <td>&nbsp;</td>
                                        <td width="120" style="font-weight:bold">Cheque #:</td>
                                        <td width="120"style="color:black;">@voucher.Cheque</td>
                                    </tr>
                                    <tr>
                                        <td width="120" style="font-weight:bold">Voucher No:</td>
                                        <td style="color:black;">@voucher.ReferenceNo</td>
                                        <td>&nbsp;</td>
                                        <td width="120" style="font-weight:bold">Journal:</td>
                                        <td style="color:black;">@voucher.Journal</td>
                                    </tr>
                                    <tr>
                                        <td width="120" style="font-weight:bold">Date:</td>
                                        <td style="color:black;">@voucher.Date</td>
                                        <td>&nbsp;</td>
                                        <td width="120" style="font-weight:bold">Region:</td>
                                        <td style="color:black;">@voucher.Region</td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <table cellpadding="5" style="width:100%;border-top:2px solid;">
                                    <tr>
                                        <td width="120" ><span style="font-weight:bold">Description:</span> <br>@voucher.Description</td>                                        
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <table style="border:1px black solid !important; width:100%; left: 0px; right: 0px;" border="1" cellspacing="0" cellpadding="5">
                                    <tr>
                                        <td style="border-top-color:black;text-align:center;font-weight:bold">A/C No</td>
                                        <td style="border-top-color:black;text-align:center;font-weight:bold">Line Item Description</td>
                                        <td style="border-top-color:black;text-align:center;font-weight:bold">Debit</td>
                                        <td style="border-top-color:black;text-align:center;font-weight:bold">Credit</td>
                                        <td style="border-top-color:black;text-align:center;font-weight:bold">B/Line</td>
                                        <td style="border-top-color:black;text-align:center;font-weight:bold">Area</td>
                                        <td style="border-top-color:black;text-align:center;font-weight:bold">Sct</td>
                                        <td style="border-top-color:black;text-align:center;font-weight:bold">Prj</td>
                                        <td style="border-top-color:black;text-align:center;font-weight:bold">Job</td>
                                    </tr>
                                    @foreach (var transaction in @voucher.TransactionDetails)
                                    {
                                    <tr>
                                        <td style="color:black;">@transaction.AccountNo</td>
                                        <td style="color:black;">@transaction.Description</td>
                                        <td  style="color:black;"align="right">@transaction.Debit</td>
                                        <td style="color:black;" align="right">@transaction.Credit</td>
                                        <td style="color:black;">@transaction.BudgetLine</td>
                                        <td style="color:black;">@transaction.Area</td>
                                        <td style="color:black;">@transaction.Sector</td>
                                        <td style="color:black;">@transaction.Project</td>
                                        <td style="color:black;">@transaction.Job</td>
                                    </tr>
                                    }
                                    <tr>
                                        <td style="border-top-color:black;border-bottom-color:black;border-left-color:black;font-weight:bold;" colspan="2">Total:</td>
                                        <td style="color:black;" align="right">@voucher.TotalDebit</td>
                                        <td style="color:black;" align="right">@voucher.TotalCredit</td>
                                        <td style="color:black;" colspan="5"></td>
                                    </tr>
                                    <tr class="page-break-before">
                                        <td colspan="9"><br></td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
               
                        <tr>
                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td>   </td>
                        </tr>
                     </table>
                   <div style="height:900px;width:693px;border-left:2px solid;border-right:2px solid;position:absolute"></div>
                     <div  class="footer">
                                <table cellspacing="0" >
                                        <tr>
                                            <td width="20"></td>
                                            <td style="border-left:2px solid black;border-right:2px solid black;border-top:2px solid black;">&nbsp;</td>
                                            <td width="50"></td>
                                            <td style="border-left:2px solid black;border-right:2px solid black;border-top:2px solid black;"></td>
                                            <td width="50"></td>
                                            <td style="border-left:2px solid black;border-right:2px solid black;border-top:2px solid black;"></td>
                                            <td width="50"></td>
                                            <td style="border-left:2px solid black;border-right:2px solid black;border-top:2px solid black;"></td>
                                        </tr>
                                        <tr>
                                            <td width="20"></td>
                                            <td style="border-left:2px solid black;border-right:2px solid black;"></td>
                                            <td></td>
                                            <td style="border-left:2px solid black;border-right:2px solid black;"></td>
                                            <td></td>
                                            <td style="border-left:2px solid black;border-right:2px solid black;"></td>
                                            <td></td>
                                            <td style="border-left:2px solid black;border-right:2px solid black;"></td>
                                        </tr>
                                        <tr>
                                           <td width="20"></td>
                                            <td align="center" style="width:120;border-left:2px solid black;border-right:2px solid black;border-bottom:2px solid black;font-weight:bold;">Prepared By</td>
                                            <td></td>
                                            <td align="center" style="width:120;border-left:2px solid black;border-right:2px solid black;border-bottom:2px solid black;font-weight:bold;">Computerized by</td>
                                            <td></td>
                                            <td align="center" style="width:120;border-left:2px solid black;border-right:2px solid black;border-bottom:2px solid black;font-weight:bold;">Checked By</td>
                                            <td></td>
                                            <td align="center" style="width:120;border-left:2px solid black;border-right:2px solid black;border-bottom:2px solid black;font-weight:bold;">Approved by</td>
                                        </tr>
                                        
                                    </table>
                    </div>
                 </div>
                 
                }
          
       
    </body>
</html>