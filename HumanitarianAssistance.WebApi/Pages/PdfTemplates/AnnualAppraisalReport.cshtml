@model List<HumanitarianAssistance.Application.HR.Models.AnnualAppraisalReportPdfModel>
<html>
<head>
    <title></title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .container {
            max-width: 1300px;
        }
    </style>
</head>
<body>
    <div class="container">
        <table style="width:100%;">
            <tr>
                <td>
                    <table cellpadding="5" style="width:100%;">
                        <tr>
                            <td width="60"><img src="logo.jpg" alt=""></td>
                            <td style="font-size:20px;font-weight:500;text-align:center;">Coordination of Humanitarian Assistance (CHA)<br><p style="font-size:16px;font-weight:400;text-align:center;">Management Staff Annual Appraisal Report<p> </td>

                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    <table cellpadding="5" style="width:100%;font-size:14px;text-align:center;" border="1" bordercolor="#bfbfbf" cellspacing="0">
                        <tr>
                            <th style="text-align:center; font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">S#</th>
                            <th style="text-align:center;font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Name</th>
                            <th style="text-align:center;font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Father Name</th>
                            <th style="text-align:center;font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Designation</th>
                            <th style="text-align:center;font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Department</th>
                            <th style="text-align:center;font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Weak Point</th>
                            <th style="text-align:center;font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Strong Point</th>
                            <th style="text-align:center;font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Appraisal Status</th>
                            <th style="text-align:center;font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Required Training for Staff </th>
                            <th style="text-align:center;font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Employee Comments</th>
                            <th style="text-align:center;font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Supervisor  Comments</th>
                            <th style="text-align:center;font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Committee Member 1</th>
                            <th style="text-align:center;font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Committee Member 2</th>
                            <th style="text-align:center;font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Final Review Remarks </th>
                        </tr>
                        @foreach (var Item in Model)
                        {
                        <tr>
                            <td>@Item.SerialNumber</td>
                            <td>@Item.Name</td>
                            <td>@Item.FatherName</td>
                            <td>@Item.Designation</td>
                            <td>@Item.Department</td>
                            <td>
                           @foreach (var data1 in Item.WeakPoint)
                           {
                                @data1 <br>
                            }
                            </td>
                            <td>
                                @foreach (var data2 in Item.StrongPoint)
                                {
                                    @data2 <br> 
                                }
                            </td>
                            <td>@Item.AppraisalStatus</td>
                            <td>@Item.RequiredTraining</td>
                            <td>@Item.EmployeeComments</td>
                            <td>@Item.SuperviserComment</td>
                            <td>@Item.CommitteeMemberOne</td>
                            <td>@Item.CommitteeMemberTwo</td>
                            <td>@Item.FinalReview</td>
                        </tr>
                        }
                    </table>
                </td>
            </tr>
            <tr>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>&nbsp;</td>
            </tr>
        </table>
    </div>
</body>
</html>
