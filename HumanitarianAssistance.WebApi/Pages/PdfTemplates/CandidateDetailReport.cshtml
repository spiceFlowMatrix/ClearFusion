@model List<HumanitarianAssistance.Application.Project.Models.CandidateDetailsPdfModel>
<html>
<head>
    <title></title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .container {
            max-width: 1300px;
        }
    </style>
</head>
<body>
    <div class="container">
        <table style="width:100%;">
            <tr>
                <td>
                    <table cellpadding="5" style="width:100%;">
                        <tr>
                            <td width="60"><img src="logo.jpg" alt=""></td>
                            <td style="font-size:20px;font-weight:500;text-align:center;">Coordination of Humanitarian Assistance (CHA)<br><p style="font-size:16px;font-weight:400;text-align:center;">Candidate Details Report<p> </td>

                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    <table cellpadding="5" style="width:100%;font-size:14px;text-align:center;" border="1" bordercolor="#bfbfbf" cellspacing="0">
                        <tr>
                            <th style="text-align:center; font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">S#</th>
                            <th style="text-align:center; font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">First Name</th>
                            <th style="text-align:center; font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Last Name</th>
                            <th style="text-align:center; font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Gender</th>
                            <th style="text-align:center; font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Education</th>
                            <th style="text-align:center; font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Phone Number</th>
                            <th style="text-align:center; font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Profession</th>
                            <th style="text-align:center; font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Email</th>
                            <th style="text-align:center; font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Total Experience</th>
                            <th style="text-align:center; font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Relevant Experience</th>
                            <th style="text-align:center; font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Irrelevant Experience</th>
                            <th style="text-align:center; font-weight:200;font-size:10px;background-color:#789d4f;color:#ffffff;border-color:#789d4f;border-left-color:#608637;">Status</th>
                        </tr>
                        @foreach (var Item in Model)
                        {
                        <tr>
                            <td>@Item.SerialNumber</td>
                            <td>@Item.FirstName</td>
                            <td>@Item.LastName</td>
                            <td>@Item.Gender</td>
                            <td>@Item.EducationDegree</td>
                            <td>@Item.PhoneNumber</td>
                            <td>@Item.Profession</td>
                            <td>@Item.Email</td>                                                                                    
                            <td>@Item.TotalExperienceInYear</td>
                            <td>@Item.RelevantExperienceInYear</td>
                            <td>@Item.IrrelevantExperienceInYear</td>
                            <td>@Item.Status</td>
                        </tr> 
                        }
                    </table>
                </td>
            </tr>
            <tr>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>&nbsp;</td>
            </tr>
        </table>
    </div>
</body>
</html>
